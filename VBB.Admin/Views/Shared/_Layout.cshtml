<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - VBB Admin</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top sidebar-navbar-inverse">
        <div class="container sidebar-navbar-container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("VBB Admin", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Access Management <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("People", "Index", "People")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Permission Groups", "Index", "PermissionGroups")</li>
                            <li>@Html.ActionLink("Permissions", "Index", "Permissions")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Dictionaries <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Languages", "Index", "Languages")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Term Types", "Index", "TermTypes")</li>
                            <li>@Html.ActionLink("Term Levels", "Index", "TermLevels")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Course Types", "Index", "CourseTypes")</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_AboutPartial")
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="sidebar-layout">

        <div class="sidebar-aside-content">
            <!-- Content of sidebar -->
            <ul class="sidebar-nav">
                <li>@Html.ActionLink("Term Topics", "Index", "TermTopics")</li>
                <li>@Html.ActionLink("Terms", "Index", "Terms")</li>
                <li>@Html.ActionLink("Term Pictures", "Index", "TermPictures")</li>
                <li>@Html.ActionLink("Term Tags", "Index", "TermTags")</li>
                <li role="separator" class="divider"></li>
                <li>@Html.ActionLink("Words", "Index", "Words")</li>
                <li>@Html.ActionLink("Word Sounds", "Index", "WordSounds")</li>
                <li role="separator" class="divider"></li>
                <li>@Html.ActionLink("Courses", "Index", "Courses")</li>
                <li>@Html.ActionLink("Lessons", "Index", "Lessons")</li>
                <li role="separator" class="divider"></li>
                <li>@Html.ActionLink("Course Reviews", "Index", "CourseReviews")</li>
                <li>@Html.ActionLink("Lesson Reviews", "Index", "LessonReviews")</li>
            </ul>
        </div>

        <div class="container body-content sidebar-body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - VBB Admin</p>
            </footer>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
