@model IEnumerable<VBB.Model.Word>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Language.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Term.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsReadOnly)
        </th>
